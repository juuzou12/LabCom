<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotpassword_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ForgotPassword">

    <ScrollView
        android:id="@+id/enterNewPass_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enterNewPass_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <Button
                    android:id="@+id/finish"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/white_btn"
                    android:fontFamily="@font/ruda"
                    android:text="Finish"
                    android:textColor="@color/colorWhite"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/forgot_email_edt3"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="354dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/white_btn"
                    android:ems="10"
                    android:fontFamily="@font/ruda"
                    android:gravity="center"
                    android:hint=" New Password"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/forgot_email_edt4"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="404dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/white_btn"
                    android:ems="10"
                    android:fontFamily="@font/ruda"
                    android:gravity="center"
                    android:hint="Confirm New Password"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="139dp"
                    android:layout_marginEnd="130dp"
                    android:src="@drawable/newpass_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/forgot_pass_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                    android:gravity="center"
                    android:text="Forgot Password"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="239dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="473dp"
                    android:text="Type Here your New password"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/enterCode_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/enterCode_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <Button
                    android:id="@+id/forgot_pass_next_btn2"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/white_btn"
                    android:text="Next"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/forgot_email_edt2"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="360dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/white_btn"
                    android:ems="10"
                    android:fontFamily="@font/ruda"
                    android:gravity="center"
                    android:hint="Enter Code"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="139dp"
                    android:layout_marginEnd="130dp"
                    android:src="@drawable/sent_email_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/forgot_pass_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                    android:gravity="center"
                    android:text="Forgot Password"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="239dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="473dp"
                    android:gravity="center"
                    android:text="Please check your Email Address for the Verification Code"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="293dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="419dp"
                    android:text="Enter the Verification Code below "
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/enterEmail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/enterEmail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/forgot_pass_next_btn"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="146dp"
                        android:layout_marginTop="500dp"
                        android:layout_marginEnd="145dp"
                        android:layout_marginBottom="202dp"
                        android:background="@drawable/white_btn"
                        android:text="Next"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/forgot_email_edt"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="360dp"
                        android:layout_marginEnd="44dp"
                        android:background="@drawable/white_btn"
                        android:ems="10"
                        android:fontFamily="@font/ruda"
                        android:gravity="center"
                        android:hint="Enter Email Address"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="139dp"
                        android:layout_marginEnd="130dp"
                        android:src="@drawable/email_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/forgot_pass_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="18dp"
                        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                        android:gravity="center"
                        android:text="Forgot Password"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="239dp"
                        android:layout_marginEnd="55dp"
                        android:layout_marginBottom="473dp"
                        android:text="Please Enter your Registered Email Address"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="293dp"
                        android:layout_marginEnd="55dp"
                        android:layout_marginBottom="419dp"
                        android:gravity="center"
                        android:text="We will send you a verification code to your Email Address"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>